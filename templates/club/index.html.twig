{% extends 'base.html.twig' %}

{% block title %}Hello ClubController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">    
    Nb de club:{{clubs|length}}   
    <ul>
        {% for club in clubs %}
            <li>{{club.nom}}</li>    
            

            Il y a dans le club: 
            {% for adherent in club.getAdherents() %}
                <h4>-{{adherent.getNom()}}</h4>
            {% endfor %}
            
            <a href="{{path('clubmodif',{id:club.id})}}">Modifier</a> |
            <a href="{{path('clubsupp',{id:club.id})}}">Supprimer</a>
        {% else %}
            pas de club trouve.
        {% endfor %}

    </ul>    
</div>
{% endblock %}

